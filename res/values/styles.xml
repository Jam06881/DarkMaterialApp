<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="AppTheme.Base" />
    <style name="AppTheme.Base" parent="MaterialDrawerTheme.TranslucentStatus">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        <item name="android:windowBackground">@android:color/transparent</item>

        <!--Drawer Tweaks-->
        <item name="material_drawer_window_background">@android:color/black</item>
        <item name="material_drawer_background">#99000000</item>
        <item name="material_drawer_icons">@android:color/white</item>
        <item name="material_drawer_primary_text">@android:color/white</item>
        <item name="material_drawer_secondary_text">@color/dark_grey</item>
        <item name="material_drawer_hint_text">@color/dark_grey</item>
        <item name="material_drawer_divider">@color/divider</item>
        <item name="material_drawer_selected">@color/dark_grey</item>
        <item name="material_drawer_selected_text">@color/primary</item>
        <item name="material_drawer_header_selection_text">@android:color/white</item>

        <!--Material Dialogs Libraries-->
        <item name="md_dark_theme">true</item>
        <item name="md_background_color">#212021</item>
    </style>

    <style name="FabLabels">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

</resources>
